# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
subscription_status_set_to_active_state_after_a_failsCounter_reset.test

--SHELL-INIT--
dbInit CB
brokerStart CB 0 IPv4 --cache -subCacheIval 3
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription with maxFailsLimit set to 5
# 02. Create entity E1
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 03. GET subscription, see maxFailsLimit, but no failsCounter and status==active
# 04. Stop accumulator
# 05. Update E1, to provoke notification that now fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 06. GET subscription, see failsCounter=1 and status==failed
# 07. Update E1 again, to provoke notification that now fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 08. GET subscription, see failsCounter=2 and status==failed
# 09. Start accumulator again
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 10. GET subscription, see failsCounter=0 and status==active
#

echo "01. Create subscription with maxFailsLimit set to 5"
echo "==================================================="
payload='{
  "subject": {
    "entities": [
      {
        "idPattern": "E.*",
        "type": "T"
      }
    ],
    "condition": {
      "attrs": [ "A1" ]
    }
  },
  "notification": {
    "http": {"url": "http://localhost:'$LISTENER_PORT'/notify"},
    "attrs": [ "A1" ]
  },
  "expires": "2050-04-05T14:00:00.00Z",
  "maxFailsLimit": 5
}'
orionCurl --url /v2/subscriptions --payload "$payload"
subId=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")
echo
echo


echo "02. Create entity E1"
echo "===================="
payload='{
  "id": "E1",
  "type": "T1",
  "A1": 1
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


# Sleep > 3 seconds to get a cache refresh
sleep 3.5


echo "03. GET subscription, see maxFailsLimit, but no failsCounter and status==active"
echo "==============================================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "04. Stop accumulator"
echo "===================="
accumulatorStop
echo
echo


echo "05. Update E1, to provoke notification that now fails"
echo "====================================================="
payload='{
  "A1": 6
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo


# Await sub-cache contents to be dumped into database
sleep 3.5


echo "06. GET subscription, see failsCounter=1 and status==failed"
echo "==========================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "07. Update E1 again, to provoke notification that fails"
echo "======================================================="
payload='{
  "A1": 7
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo


# Await sub-cache contents to be dumped into database
sleep 3.5


echo "08. GET subscription, see failsCounter=2 and status==failed"
echo "==========================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "09. Start accumulator"
echo "====================="
accumulatorStart
echo
echo


# Await sub-cache contents to be dumped into database
sleep 3.5


echo "10. GET subscription, see set to failsCounter=0 and status==active"
echo "=================================================================="
orionCurl --url /v2/subscriptions
echo
echo


