--NAME--
subscription_that_pass_to_inactive_state_after_a_limit_of_failed_connection_attemps

--SHELL-INIT--
dbInit CB
brokerStart CB 0 IPv4 --cache -subCacheIval 3
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription with maxFailsLimit set to 5
# 02. Create entity E1
# 03. GET subscription, see maxFailsLimit=5 and status==active
# 04. Stop accumulator
# 05. Update E1, to provoke notification that now fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 06. GET subscription, see failsCounter=1 and status==failed
# 07. Update E1 again, to provoke notification that fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 08. GET subscription, see failsCounter=2 and status==failed
# 09. Update E1 again, to provoke notification that fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 10. GET subscription, see failsCounter=3 and status==failed
# 11. Update E1 again, to provoke notification that fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 12. GET subscription, see failsCounter=4 and status==failed
# 13. Update E1 again, to provoke notification that fails
#     Sleep 3.5 seconds to get a sub-cache-refresh
# 14. GET subscription, see failsCounter=5 and status==inactive
#

echo "01. Create subscription with maxFailsLimit set to 5"
echo "==================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id": "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify",
      "maxFailsLimit": 3
    },
    "attrs": [ ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
subId=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")
echo
echo


echo "02. Create entity E1"
echo "===================="
payload='{
  "id": "E1",
  "type": "T1",
  "A1": 1
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


echo "03. GET subscription, see maxFailsLimit=5 and status==active"
echo "============================================================"
orionCurl --url /v2/subscriptions
echo
echo


echo "04. Stop accumulator"
echo "===================="
accumulatorStop
echo
echo


echo "05. Update E1, to provoke notification that now fails"
echo "====================================================="
payload='{
  "A1": 6
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo


# Await sub-cache contents to be dumped into database
sleep 3.5


echo "06. GET subscription, see failsCounter=1 and status==failed"
echo "==========================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "07. Update E1 again, to provoke notification that fails"
echo "======================================================="
payload='{
  "A1": 7
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo


# Await sub-cache contents to be dumped into database
sleep 3.5


echo "08. GET subscription, see failsCounter=2 and status==failed"
echo "==========================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "09. Update E1 again, to provoke notification that fails"
echo "======================================================="
payload='{
  "A1": 3
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo

# Await sub-cache contents to be dumped into database
sleep 3.5


echo "10. GET subscription, see failsCounter=3 and status==failed"
echo "==========================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "11. Update E1 again, to provoke notification that fails"
echo "======================================================="
payload='{
  "A1": 10
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo

# Await sub-cache contents to be dumped into database
sleep 3.5


echo "12. GET subscription, see failsCounter=4 and status==failed"
echo "==========================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "13. Update E1 again, to provoke notification that fails"
echo "======================================================="
payload='{
  "A1": 13
}'
orionCurl --url /v2/entities/E1/attrs?options=keyValues --payload "$payload"
echo
echo

# Await sub-cache contents to be dumped into database
sleep 3.5


echo "14. GET subscription, see failsCounter=5 and status==inactive"
echo "============================================================="
orionCurl --url /v2/subscriptions
echo
echo


