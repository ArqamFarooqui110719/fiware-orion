echo '01. Create sub1 with payload="abc", includePayload=false'
echo "========================================================"
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "payload": "abc",
      "includePayload":false
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
