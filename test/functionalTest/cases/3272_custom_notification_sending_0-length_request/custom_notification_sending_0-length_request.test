# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Custom notification sending 0-length request

--SHELL-INIT--
dbInit CB
brokerStart CB 0
accumulatorStart --pretty-print

--SHELL--
#
# 01. Create sub1 with payload="{ %22x%22: 1}", includePayload=false
# 02. Create sub2 without payload, includePayload=false
# 03. Create entity E1/T1
# 04. Dumps acummulator (see 2 notifications, both without payload)
#


echo '01. Create sub1 with payload="{ %22x%22: 1}", includePayload=false'
echo "=================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "payload": "{ %22x%22: 1}",
      "includePayload":false
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '02. Create sub2 without payload, includePayload=false'
echo "====================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "includePayload":false
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "03. Create entity E1/T1"
echo "======================="
payload='{
  "id": "E1",
  "type": "T1",
  "A1": true
}'
orionCurl --url /v2/entities?options=keyValues --payload "$payload"
echo
echo


echo "Dumps acummulator (see 2 notifications, both without payload)"
echo "============================================================="
accumulatorDump
echo
echo


--REGEXPECT--
01. Create sub1 with payload="{ %22x%22: 1}", includePayload=false
==================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Create sub2 without payload, includePayload=false
=====================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Create entity E1/T1
=======================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



Dumps acummulator (see 2 notifications, both without payload)
=============================================================
POST http://localhost:REGEX(\d+)/notify
Fiware-Servicepath: /
Content-Length: 129
User-Agent: orion/REGEX(\d+\.\d+\.\d+.*)
Ngsiv2-Attrsformat: normalized
Host: localhost:REGEX(\d+)
Accept: application/json
Content-Type: application/json; charset=utf-8
Fiware-Correlator: REGEX([0-9a-f\-]{36}); cbnotif=2

{
    "data": [
        {
            "A1": {
                "metadata": {},
                "type": "Boolean",
                "value": true
            },
            "id": "E1",
            "type": "T1"
        }
    ],
    "subscriptionId": "REGEX([0-9a-f]{24})"
}
=======================================
