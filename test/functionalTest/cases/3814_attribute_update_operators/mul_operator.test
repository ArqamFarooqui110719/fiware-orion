# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Attribute update operator: mul

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E with A=5
# 02. Update A with $mul: 3
# 03. Get entity, see E-A=15
#


echo '01. Create entity E with A=5'
echo '============================'
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "value": 5,
    "type": "Number"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo '02. Update A with $mul: 3'
echo '========================='
payload='{
  "A": {
    "value": { "$mul": 3 },
    "type": "Number"
  }
}'
orionCurl --url /v2/entities/E/attrs --payload "$payload"
echo
echo


echo '03. Get entity, see E-A=15'
echo '=========================='
orionCurl --url /v2/entities/E
echo
echo


--REGEXPECT--
01. Create entity E with A=5
============================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Update A with $mul: 3
=========================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Get entity, see E-A=15
==========================
HTTP/1.1 200 OK
Content-Length: 68
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {},
        "type": "Number",
        "value": 15
    },
    "id": "E",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
