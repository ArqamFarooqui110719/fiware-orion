# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Create entity with operators

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E1 with A={$inc:1}, B=2
# 02. Get entity E1, see A={$inc:1}, B=2
# 03. Create entity E2 with A={$max:10}, B=4 using batch operation
# 04. Get entity E2, see A={$max:10}, B=4
#


echo '01. Create entity E1 with A={$inc:1}, B=2'
echo '========================================='
payload='{
  "id": "E1",
  "type": "T",
  "A": {
    "value": { "$inc": 1},
    "type": "Number"
  },
  "B": {
    "value": 2,
    "type": "Number"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo '02. Get entity E1, see A={$inc:1}, B=2'
echo '======================================'
orionCurl --url /v2/entities/E1
echo
echo


echo '03. Create entity E2 with A={$max:10}, B=4 using batch operation'
echo '================================================================'
payload='{
  "actionType": "append",
  "entities": [
    {
      "id": "E2",
      "type": "T",
      "A": {
        "value": { "$max": 10 },
        "type": "Number"
      },
      "B": {
        "value": 4,
        "type": "Number"
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo '04. Get entity E2, see A={$max:10}, B=4'
echo '======================================='
orionCurl --url /v2/entities/E2
echo
echo


--REGEXPECT--
01. Create entity E1 with A={$inc:1}, B=2
=========================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Get entity E1, see A={$inc:1}, B=2
======================================
HTTP/1.1 200 OK
Content-Length: 123
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {},
        "type": "Number",
        "value": {
            "$inc": 1
        }
    },
    "B": {
        "metadata": {},
        "type": "Number",
        "value": 2
    },
    "id": "E1",
    "type": "T"
}


03. Create entity E2 with A={$max:10}, B=4 using batch operation
================================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. Get entity E2, see A={$max:10}, B=4
=======================================
HTTP/1.1 200 OK
Content-Length: 124
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {},
        "type": "Number",
        "value": {
            "$max": 10
        }
    },
    "B": {
        "metadata": {},
        "type": "Number",
        "value": 4
    },
    "id": "E2",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
